<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2450"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/custom_rectangle"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:padding="8dp"
            android:gravity="center"
            android:fontFamily="@font/font_awesome"
            android:text="\uf0c9"
            android:textSize="12pt"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Quiz App"
            android:textColor="@color/white"
            android:textSize="15pt"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="70dp"
            android:gravity="center"
            android:minHeight="70dp"
            android:padding="8dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf406"
            android:textSize="12pt"
            android:textColor="#FFC107"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_box">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Question Count"
                    android:textColor="@color/white"
                    android:textSize="7pt"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="267"
                    android:textColor="@color/white"
                    android:textSize="20pt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="|"
                    android:textSize="28pt"
                    android:textColor="#AFAFAF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your Ranking"
                    android:textColor="@color/white"
                    android:textSize="7pt"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1250"
                    android:textColor="@color/white"
                    android:textSize="20pt"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ant_sec"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_box_white">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/font_awesome"
                    android:text="\uf305"
                    android:textColor="#FF9800"
                    android:textSize="20pt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Art and Literature"
                    android:textColor="@color/white"
                    android:textSize="12pt"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/gn_sec"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_box_white">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/font_awesome"
                    android:text="\uf5dc"
                    android:textColor="#E67451"
                    android:textSize="20pt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="General Knowledge"
                    android:textColor="@color/white"
                    android:textSize="12pt"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/snt_sec"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_box_white">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/font_awesome"
                    android:text="\uf0c3"
                    android:textColor="#2196F3"
                    android:textSize="20pt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Science &amp; Tech."
                    android:textColor="@color/white"
                    android:textSize="12pt"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>